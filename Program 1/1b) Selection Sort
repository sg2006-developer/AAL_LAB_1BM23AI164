#include <stdio.h>

int main() {
    int len;
    printf("Enter array length: ");
    scanf("%d", &len);

    int i, j, minIndex, temp;
    int A[len];  


    printf("Enter array elements: ");
    for (i = 0; i < len; i++) {
        scanf("%d", &A[i]);
    }


    printf("Before Selection Sort: ");
    for (i = 0; i < len; i++) {
        printf("%d ", A[i]);
    }
    printf("\n");


    for (i = 0; i < len - 1; i++) {  
        minIndex = i; 
        for (j = i + 1; j < len; j++) { 
            if (A[j] < A[minIndex]) {
                minIndex = j;  
            }
        }


        if (minIndex != i) {
            temp = A[i];
            A[i] = A[minIndex];
            A[minIndex] = temp;
        }
    }


    printf("After Selection Sort: ");
    for (i = 0; i < len; i++) {
        printf("%d ", A[i]);
    }
    printf("\n");

    return 0;
}



OUTPUT

Enter array length: 4
Enter array elements: 5 3 4 1
Before Selection Sort: 5 3 4 1 
After Selection Sort: 1 3 4 5 
